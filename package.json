{
  "name": "bootstrap-4",
  "version": "1.0.0",
  "description": "Exploring Bootstrap 4",
  "main": "index.html",
  "scripts": {
    "start": "npm run watch:all",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lite": "lite-server",
    "scss": "node-sass -o css/ css/",
